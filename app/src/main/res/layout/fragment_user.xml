<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        android:src="@drawable/ic_tourist"
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/kredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icon made by Freepik from www.flaticon.com"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fontkeren"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nama"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        tools:text="Nama user"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="13sp"
        tools:text="Email user"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/nearMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="HISTORIC SITE NEAR ME"
        android:background="@drawable/bg_direct"
        android:fontFamily="@font/robotoregular"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign_out"
            android:background="@drawable/bg_logout"
            android:fontFamily="@font/robotomedium"
            android:textColor="@android:color/white"
            android:text="Keluar"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</LinearLayout>