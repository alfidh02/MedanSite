<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageRumah"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameRumah"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Name"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorBg"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailRumah"
            android:fontFamily="@font/robotoregular"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Detail"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="#000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorBg"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="LOKASI"
            android:fontFamily="@font/fontkeren"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />
        <fragment
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:id="@+id/mapRumah"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_direct_me"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/bg_direct"
            android:fontFamily="@font/robotomedium"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_near"
            android:layout_marginBottom="15dp"
            android:text="Tunjukkan arah"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>